#!/usr/bin/env python

from clint import args

from combox import setup, deploy, teardown, cleanup, control
from combox.exception import FatalException
from combox.ui import print_help, error


def main():
    """ Entry point.
    """

    commands = {
        'setup': setup.setup,
        'deploy': deploy.deploy,
        'teardown': teardown.teardown,
        'cleanup': cleanup.cleanup,
        'start': control.start,
        'stop': control.stop,
    }
    command = args.get(0)

    try:
        commands[command]()
    except KeyError:
        error("Unknown command: %s\nYou should try the --help option!" %
              command)


if __name__ == "__main__":
    try:
        if '--help' in args.flags:
            print_help()
        else:
            main()
    except FatalException as e:
        error(e.message)
